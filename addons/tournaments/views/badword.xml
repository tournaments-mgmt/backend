<?xml version="1.0" encoding="UTF-8" ?>

<odoo noupdate="0">

    <record id="view_badword_list" model="ir.ui.view">
        <field name="name">tournaments.badword: List view</field>
        <field name="model">tournaments.badword</field>
        <field name="arch" type="xml">
            <list>
                <field name="word"/>
            </list>
        </field>
    </record>

    <record id="view_badword_form" model="ir.ui.view">
        <field name="name">tournaments.badword: Form view</field>
        <field name="model">tournaments.badword</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <label for="word"/>
                        <h1>
                            <field name="word"/>
                        </h1>
                    </div>
                </sheet>
                <chatter reload_on_post="True"/>
            </form>
        </field>
    </record>

    <record id="view_badword_search" model="ir.ui.view">
        <field name="name">tournaments.badword: Search view</field>
        <field name="model">tournaments.badword</field>
        <field name="arch" type="xml">
            <search>
                <field name="word"/>
            </search>
        </field>
    </record>

</odoo>
